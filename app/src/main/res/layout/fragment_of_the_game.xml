<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".OfTheGameFragment"
              android:orientation="vertical"
              android:gravity="center|top"
              android:padding="10dp"
>

    <ImageView
            android:src="@drawable/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewFinish"
            android:contentDescription="@string/todo"
    android:visibility="gone"/>
    <LinearLayout
            android:id="@+id/linearLayoutGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textViewTimeGame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/timer"
                android:textColor="#070707"
                android:textSize="24sp"
                android:textStyle="bold" android:visibility="visible"/>

        <TextView
                android:id="@+id/tv_second_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible"/>
    </LinearLayout>

    <TextView
            android:id="@+id/textViewQuestionGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:text="@string/question"
            android:textColor="#050505"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <LinearLayout
            android:id="@+id/llAnswersGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="UselessParent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/check_box"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgCB1"
                    android:visibility="gone"/>
            <CheckBox
                    android:id="@+id/checkBoxGame1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/check_box"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgCB2"
                    android:visibility="gone"/>
            <CheckBox
                    android:id="@+id/checkBoxGame2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/check_box"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgCB3"
                    android:visibility="gone"/>
            <CheckBox
                    android:id="@+id/checkBoxGame3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/check_box"
                    android:elevation="10dp"
                    android:padding="8dp" android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgCB4"
                    android:visibility="gone"/>
            <CheckBox
                    android:id="@+id/checkBoxGame4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/check_box"
                    android:elevation="10dp"
                    android:padding="8dp" android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llButtonsGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:dividerPadding="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:showDividers="middle">

            <Button
                    android:id="@+id/buttonResumeGame"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    android:stateListAnimator="@null"
                    android:text="@string/resume"
                    android:textColor="#43A047"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/buttonOutGame"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    android:stateListAnimator="@null"
                    android:text="@string/out"
                    android:textColor="#43A047"
                    android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/img_hint"
               android:src="@drawable/hint"
               android:layout_marginEnd="10dp"
               android:padding="10dp"
               android:contentDescription="@string/todo"
               android:visibility="gone"/>
</LinearLayout>