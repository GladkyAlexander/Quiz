<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".ui.school.FragmentSchool">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1" android:gravity="center">

        <ImageButton
                android:id="@+id/button_mathematics"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/matematica"
                android:stateListAnimator="@null"
                android:padding="15dp"/>

        <ImageButton
                android:id="@+id/button_physics"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/phizik"
                android:stateListAnimator="@null" android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

        <ImageButton
                android:id="@+id/button_biolog"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/biolog"
                android:stateListAnimator="@null" android:padding="15dp"/>

        <ImageButton
                android:id="@+id/button_geografik"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/geografik"
                android:stateListAnimator="@null"
                android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3">

        <ImageButton
                android:id="@+id/button_history"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/history"
                android:stateListAnimator="@null"
                android:padding="20dp"/>
        <!--<ImageButton
                android:id="@+id/button_social_studies"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/button_lihguistics"
                android:contentDescription="@string/todo"
                android:elevation="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/social_studies"
                android:stateListAnimator="@null"
                android:padding="20dp"
        />-->

    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayoutShool"
            android:visibility="gone">

    </FrameLayout>

</LinearLayout>