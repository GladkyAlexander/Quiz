<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.traffic_laws.FragmentTrafficLaws"
              android:gravity="center"
              android:id="@+id/linearLayoutTrafficLaws"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:id="@+id/linear_layout_button_avia_jd">
        <ImageButton android:id="@+id/button_railway"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:layout_marginBottom="25dp"
                     android:layout_marginTop="25dp"
                     android:layout_marginStart="15dp"
                     android:layout_marginEnd="15dp"
                     android:background="@drawable/button_lihguistics"
                     android:contentDescription="@string/todo"
                     android:elevation="15dp"
                     android:scaleType="fitCenter"
                     android:src="@drawable/jd"
                     android:stateListAnimator="@null"
                     android:padding="15dp"/>
        <ImageButton android:id="@+id/button_aviation"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:layout_marginBottom="25dp"
                     android:layout_marginTop="25dp"
                     android:layout_marginStart="15dp"
                     android:layout_marginEnd="15dp"
                     android:background="@drawable/button_lihguistics"
                     android:contentDescription="@string/todo"
                     android:elevation="15dp"
                     android:scaleType="fitCenter"
                     android:src="@drawable/avia"
                     android:stateListAnimator="@null"
                     android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:id="@+id/linear_layout_button_auto">
        <ImageButton android:id="@+id/button_road"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:layout_marginBottom="25dp"
                     android:layout_marginTop="25dp"
                     android:layout_marginStart="15dp"
                     android:layout_marginEnd="15dp"
                     android:background="@drawable/button_lihguistics"
                     android:contentDescription="@string/todo"
                     android:elevation="15dp"
                     android:scaleType="fitCenter"
                     android:src="@drawable/auto"
                     android:stateListAnimator="@null"
                     android:padding="15dp"/>
    
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/frameLayoutTrafficLaws"
    />
</LinearLayout>